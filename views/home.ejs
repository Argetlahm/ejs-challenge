<%- include("partials/header") -%>
    <h1>Home</h1>
    <p><%= home %></p>

    <% postContent.forEach(function(element){ %>
    <h1><%= element.title %></h1>
    <% if (element.body.length > 100) { %>
    <%  let truncatedElement = element.body.slice(0,100) %>
      <p><%= truncatedElement %>...</p>
  <%  } else { %>
      <p><%= element.body %></p>
  <%  } %>

    <% }) %>


